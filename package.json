{
  "name": "celso.io",
  "version": "1.0.1",
  "description": "my blog package.json helper",
  "main": "index.js",
  "scripts": {
    "install": "npm install -g npx; sudo gem install bundler; bundle install",
    "jekyll": "bundle exec jekyll build --watch --trace",
    "jekyll-serve": "bundle exec jekyll serve --watch --trace",
    "build": "bundle exec jekyll build",
    "deploy": "bundle exec jekyll build",
    "dev": "bundle exec jekyll build --watch --trace & dotenv -f .env -- npx wrangler dev --env=production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/celso/celso.io.git"
  },
  "keywords": [
    "npm",
    "workers",
    "helper"
  ],
  "author": "Celso Martinho",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/celso/celso.io/issues"
  },
  "homepage": "https://github.com/celso/celso.io#readme",
  "devDependencies": {
    "@cloudflare/wrangler": "^1.20.0",
    "dotenv-cli": "^6.0.0"
  }
}
